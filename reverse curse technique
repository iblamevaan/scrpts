-- Passive Smooth Reverse Cursed Technique (Fast Healing)

local Players = game:GetService("Players")
local RunService = game:GetService("RunService")

local player = Players.LocalPlayer

-- Adjust heal speed here (higher = faster)
local HEAL_SPEED = 500  -- HP per second

local function applyRCT(character)
	local humanoid = character:WaitForChild("Humanoid")

	local conn
	conn = RunService.Heartbeat:Connect(function(dt)
		if not humanoid or humanoid.Health <= 0 then
			if conn then conn:Disconnect() end
			return
		end

		-- Smooth healing per frame
		humanoid.Health = math.clamp(
			humanoid.Health + HEAL_SPEED * dt,
			0,
			humanoid.MaxHealth
		)
	end)
end

-- Apply to current character
if player.Character then
	applyRCT(player.Character)
end

-- Reapply on respawn
player.CharacterAdded:Connect(applyRCT)
